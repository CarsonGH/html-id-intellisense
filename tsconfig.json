{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": ["ES2022"],
		"resolveJsonModule": true,
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node16"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "out"]
}